// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Note that some adapters may set a maximum length for the String type by default, please ensure your strings are long
// enough when changing adapters.
// See https://www.prisma.io/docs/orm/reference/prisma-schema-reference#string for more information
datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

model Session {
  id                  String    @id
  shop                String
  state               String
  isOnline            Boolean   @default(false)
  scope               String?
  expires             DateTime?
  accessToken         String
  userId              BigInt?
  firstName           String?
  lastName            String?
  email               String?
  accountOwner        Boolean   @default(false)
  locale              String?
  collaborator        Boolean?  @default(false)
  emailVerified       Boolean?  @default(false)
  refreshToken        String?
  refreshTokenExpires DateTime?
}

model CustomSizeSet {
  id             Int      @id @default(autoincrement())
  shop           String
  name           String
  triggerVariant String
  imageUrl       String?
  imagePosition         String   @default("top") // "top", "left", "right", "bottom"
  imageWidth            String?  @default("auto")
  imageHeight           String?  @default("auto")
  imageContainerWidth   String?  @default("auto")
  fieldsContainerWidth  String?  @default("auto")
  mobileImagePosition   String   @default("top")
  mobileImageWidth      String?  @default("auto")
  mobileImageHeight     String?  @default("auto")
  mobileImageContainerWidth String?  @default("auto")
  mobileFieldsContainerWidth String? @default("auto")
  displayStyle          String   @default("MODAL") // "MODAL" or "INLINE"
  noteTitle      String?
  noteContent    String?
  reqNearestSize Boolean  @default(false)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  fields         CustomSizeField[]
}

model CustomSizeField {
  id        Int           @id @default(autoincrement())
  setId     Int
  set       CustomSizeSet @relation(fields: [setId], references: [id], onDelete: Cascade)
  label     String
  type      String
  required  Boolean       @default(false)
  placeholder String?
  order     Int           @default(0)
}

model CustomSizeDesign {
  id               Int      @id @default(autoincrement())
  shop             String   @unique
  // Layout
  imageLayout      String?  @default("vertical") // "vertical" or "horizontal"
  // Backgrounds
  modalBgColor     String?
  // Borders
  borderWidth      Int?
  borderStyle      String?
  borderColor      String?
  // Colors
  textColor        String?
  placeholderColor String?
  titleColor       String?
  noteColor        String?
  noteBgColor      String?
  // Font Sizes Desktop
  noteTitleFontSizeDesktop      String?  @default("18px")
  noteContentFontSizeDesktop    String?  @default("14px")
  fieldTitleFontSizeDesktop     String?  @default("14px")
  fieldPlaceholderFontSizeDesktop String?  @default("13px")
  // Font Sizes Mobile
  noteTitleFontSizeMobile       String?  @default("16px")
  noteContentFontSizeMobile     String?  @default("13px")
  fieldTitleFontSizeMobile      String?  @default("13px")
  fieldPlaceholderFontSizeMobile String?  @default("12px")
  // Custom CSS
  customCss        String?
  displayStyle     String   @default("INLINE") // "MODAL" or "INLINE"
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

